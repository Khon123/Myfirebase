<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundFacebook</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="edit_text">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textcolorBlack</item>
        <item name="android:textColorHint">@color/textcolorGrey</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/round_retangle</item>
    </style>

</resources>
